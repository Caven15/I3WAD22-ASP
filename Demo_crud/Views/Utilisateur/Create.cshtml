@model Demo_crud.Models.Utilisateur

<form asp-action="Create" class="bg-secondary rounded-3">
    <div class="fw-bold text-danger fs-3">
        @if (!ViewContext.ModelState.IsValid)
        {
            @Html.ValidationMessageFor(model => model.Nom, null)
        }
    </div>
    <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label" asp-for="Nom"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext bg-light" id="staticEmail" asp-for="Nom">
        </div>
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <div>
        <a asp-action="Index">Retour a la liste</a>
    </div>
</form>



