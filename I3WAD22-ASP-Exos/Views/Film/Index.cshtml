@model FilmIndexViewModel

@if (Model.Films.Count > 0){
    <div id="carouselExampleCaptions" class="carousel carousel-dark slide" data-bs-ride="false">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 5"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="5" aria-label="Slide 6"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="6" aria-label="Slide 7"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="7" aria-label="Slide 8"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active d-flex justify-content-center">
                <img src="@Model.Films[0].Link_img" class="d-block img-fluid" alt="@Model.Films[0].Titre">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[1].Link_img" class="d-block img-fluid" alt="@Model.Films[1].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[1].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[2].Link_img" class="d-block img-fluid" alt="@Model.Films[2].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[2].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[3].Link_img" class="d-block img-fluid" alt="@Model.Films[3].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[3].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[4].Link_img" class="d-block img-fluid" alt="@Model.Films[4].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[4].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[5].Link_img" class="d-block img-fluid" alt="@Model.Films[5].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[5].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[6].Link_img" class="d-block img-fluid" alt="@Model.Films[6].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[6].Titre</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Model.Films[7].Link_img" class="d-block img-fluid" alt="@Model.Films[7].Titre">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold text-white">@Model.Films[7].Titre</h5>
                </div>
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
} else 
{
    <h1 class="d-flex justify-content-center">Aucune image dans la liste !</h1>
}